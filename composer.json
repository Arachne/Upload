{
    "name": "arachne/upload",
    "description": "Handling nette/http file uploads. Intended to be used with kdyby/validator and/or arachne/forms.",
    "type": "library",
    "keywords": [ "nette", "arachne", "upload" ],
    "license": "MIT",
    "authors": [
        {
            "name": "Jáchym Toušek",
            "homepage": "http://enumag.cz",
            "email": "enumag@gmail.com"
        }
    ],
    "require": {
        "php": "^5.5.0|^7.0.0",
        "nette/http": "^2.3.0"
    },
    "require-dev": {
        "arachne/codeception": "^0.7.3",
        "arachne/forms": "^0.3.0",
        "codeception/codeception": "^2.2.0",
        "eloquent/phony": "^0.14.0",
        "symfony/validator": "^3.2.0"
    },
    "autoload": {
        "psr-4": {
            "Arachne\\Upload\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Unit\\": "tests/unit/src"
        }
    },
    "scripts": {
        "all": [
            "@fix",
            "@analyse",
            "@test"
        ],
        "tools": "sh composer-tools.sh",
        "fix": "\"vendor-tools/bin/php-cs-fixer\" fix",
        "analyse": "\"vendor-tools/bin/phpstan\" analyse --no-progress --level=5 --configuration=phpstan.neon src tests",
        "test": [
            "\"vendor/bin/codecept\" build",
            "\"vendor/bin/codecept\" run --debug"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.2-dev"
        }
    }
}
