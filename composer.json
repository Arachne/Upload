{
    "name": "arachne/upload",
    "description": "Handling nette/http file uploads. Intended to be used with kdyby/validator and/or arachne/forms.",
    "type": "library",
    "keywords": [ "nette", "arachne", "upload" ],
    "license": "MIT",
    "authors": [
        {
            "name": "Jáchym Toušek",
            "homepage": "http://enumag.cz",
            "email": "enumag@gmail.com"
        }
    ],
    "require": {
        "php": "^7.1.0",
        "nette/http": "^2.4.0"
    },
    "require-dev": {
        "arachne/codeception": "^0.8.0",
        "arachne/forms": "^0.4.0",
        "codeception/codeception": "^2.3.2",
        "eloquent/phony": "^2.0.0",
        "eloquent/phony-phpunit": "^3.0.0",
        "eloquent/phpstan-phony": "^0.1.1",
        "friendsofphp/php-cs-fixer": "^2.8.0",
        "symfony/validator": "^4.0.0",
        "phpstan/phpstan": "^0.9.1",
        "phpstan/phpstan-nette": "^0.9.0"
    },
    "autoload": {
        "psr-4": {
            "Arachne\\Upload\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Unit\\": "tests/unit/src"
        },
        "files": [
            "vendor/codeception/codeception/shim.php"
        ]
    },
    "scripts": {
        "ci": [
            "@fix",
            "@analyse",
            "@test"
        ],
        "fix": "\"vendor/bin/php-cs-fixer\" fix",
        "analyse": "\"vendor/bin/phpstan\" analyse --no-progress --level=max --configuration=phpstan.neon src tests",
        "test": [
            "\"vendor/bin/codecept\" build",
            "\"vendor/bin/codecept\" run --debug"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.3-dev"
        }
    }
}
